#!/bin/sh
#
#	Raw form of the file setting the environment variables that are necessary to
#	run a simulation including geant4, xcsit and py_detector_simulation
#
#	File:	env.sh.in
#	Author: jburchert
#	Date:	21 August 2017
#

# Variable is required to make python find the shared objects containing the the
# exported c++ classes
export PYTHONPATH=${CMAKE_BINARY_DIR}/src:$PYTHONPATH
echo "Adding ${CMAKE_BINARY_DIR}/lib to the PYTHONPATH" 

# variable necessary for the particle simulation. Somewhere deep in geant4 this
# variable is used
# the number needs to be changed if necessary
export G4ENSDFSTATEDATA=${GEANT4_BUILD}/data/G4ENSDFSTATE2.1
echo "Setting G4ENSDFSTATEDATA"

# the following lines are copied and adjusted from setG5EnvironmentalVariables.sh
export G4ABLADATA=${GEANT4_BUILD}/data/G4ABLA3.0
echo "Setting G4ABLADATA"

export G4LEDATA=${GEANT4_BUILD}/data/G4EMLOW6.50
echo "Setting G4LEDATA"

export G4NEUTRONHPDATA=${GEANT4_BUILD}/data/G4NDL4.5
echo "Setting G4NEUTRONHPDATA"

export G4NEUTRONXSDATA=${GEANT4_BUILD}/data/G4NEUTRONNXS1.4
echo "Setting G4NEUTRONXSDATA"

export G4PIIDATA=${GEANT4_BUILD}/data/G4PII1.4
echo "Setting G4PIIDATA"

export G4SAIDXSDATA=${GEANT4_BUILD}/data/G4SAIDDATA1.1
echo "Setting G4SAIDXSDATA"

export G4LEVELGAMMADATA=${GEANT4_BUILD}/data/PhotonEvaporation4.3.2
echo "Setting G4LEVELGAMMADATA"

export G4RADIOACTIVEDATA=${GEANT4_BUILD}/data/RadioactiveDecay5.1.1
echo "Setting G4RADIOACTIVEDATA"

export G4REALSURFACEDATA=${GEANT4_BUILD}/data/RealSurface1.0
echo "Setting G4REALSURFACEDATA"


# Report finished
echo "Done"
